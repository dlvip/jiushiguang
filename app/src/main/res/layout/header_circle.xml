<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fff">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_circle_header_pic"
            android:layout_width="@dimen/layout_0"
            android:layout_height="@dimen/layout_0"
            android:background="@color/color_999"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_80"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/layout_10"
            app:layout_constraintTop_toBottomOf="@+id/img_circle_header_pic">

            <View
                android:layout_width="@dimen/layout_70"
                android:layout_height="@dimen/line_height"
                android:background="@color/line_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="@dimen/layout_15"
                android:layout_marginRight="@dimen/layout_15"
                android:gravity="center"
                android:paddingRight="@dimen/layout_20"
                android:text="@string/circle_title"
                android:textColor="@color/color_999"
                android:textSize="@dimen/text_12" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/layout_30"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:padding="@dimen/layout_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:layout_width="@dimen/layout_60"
            android:layout_height="@dimen/layout_60"
            android:scaleType="centerCrop" />
    </LinearLayout>

</FrameLayout>

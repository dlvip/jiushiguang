<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fff"
    android:gravity="center_vertical"
    android:padding="@dimen/layout_10">

    <ImageView
        android:id="@+id/img_user_header"
        android:layout_width="@dimen/layout_50"
        android:layout_height="@dimen/layout_50"
        android:layout_marginRight="@dimen/layout_15"
        android:scaleType="fitXY"
        android:src="@mipmap/head_circle" />

    <TextView
        android:id="@+id/tv_user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_14" />

    <TextView
        android:id="@+id/tv_goods_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_14" />

</LinearLayout>

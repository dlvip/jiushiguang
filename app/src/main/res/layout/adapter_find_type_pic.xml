<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/color_fff"
    android:paddingRight="@dimen/layout_10">

    <ImageView
        android:id="@+id/img_event_pic"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginRight="@dimen/layout_10"
        android:background="@color/color_999"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_event_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_44"
        android:layout_toRightOf="@+id/img_event_pic"
        android:enabled="true"
        android:maxLines="2"
        android:minLines="2"
        android:text="@string/title"
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_14" />

    <TextView
        android:id="@+id/tv_event_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/layout_3"
        android:layout_toRightOf="@+id/img_event_pic"
        android:lineSpacingExtra="@dimen/layout_5"
        android:maxLines="2"
        android:text="@string/title_detail"
        android:textColor="@color/color_666"
        android:textSize="@dimen/text_12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_event_pic"
        android:layout_toRightOf="@+id/img_event_pic">

        <TextView
            android:id="@+id/tv_event_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="128人参与"
            android:textColor="@color/color_ff9441"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/tv_join_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="立即参与"
            android:textColor="@color/color_ff9441"
            android:textSize="@dimen/text_12"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_10"
        android:layout_below="@+id/img_event_pic"
        android:background="@color/line_bg" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/layout_5">

    <ImageView
        android:id="@+id/img_video_pic"
        android:layout_width="@dimen/layout_0"
        android:layout_height="@dimen/layout_0"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="270:405"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_video_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="2"
        android:padding="@dimen/layout_5"
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_12"
        app:layout_constraintTop_toBottomOf="@+id/img_video_pic" />


</android.support.constraint.ConstraintLayout>

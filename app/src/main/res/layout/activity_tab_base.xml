<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_40"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/coloe_58ad2c"
        app:tabIndicatorHeight="@dimen/layout_2"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/coloe_58ad2c"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/color_666" />

    <com.old.time.views.CustomRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:r_dividerColor="@color/line_bg"
        app:r_dividerHeight="@dimen/layout_10"
        app:r_orientation="VERTICAL" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_bg" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f9f9f9"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_100"
        android:layout_marginTop="@dimen/layout_15"
        android:background="@color/color_fff"
        android:paddingLeft="@dimen/layout_20"
        android:paddingRight="@dimen/layout_10">

        <ImageView
            android:id="@+id/img_user_header"
            android:layout_width="@dimen/layout_60"
            android:layout_height="@dimen/layout_60"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_25"
            android:src="@mipmap/head_circle" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_user_header"
            android:layout_toRightOf="@+id/img_user_header"
            android:paddingTop="@dimen/layout_3"
            android:text="@string/app_name"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_18" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_user_header"
            android:layout_toRightOf="@+id/img_user_header"
            android:paddingBottom="@dimen/layout_5"
            android:text="@string/app_name"
            android:textColor="@color/color_666"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/right_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/color_fff">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/layout_15"
            android:background="@color/line_bg" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/layout_15"
        android:background="@color/color_fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/layout_5"
            android:paddingLeft="@dimen/layout_15"
            android:text="@string/mine_message"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_10"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/layout_5"
            android:paddingLeft="@dimen/layout_15"
            android:text="@string/mine_message"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_10"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>


</LinearLayout>

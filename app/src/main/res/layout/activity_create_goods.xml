<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fff"
    android:orientation="vertical"
    tools:context="com.old.time.activitys.CreateGoodsActivity">

    <include layout="@layout/header_main" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_10">

        <ImageView
            android:id="@+id/img_goods_pic"
            android:layout_width="@dimen/layout_150"
            android:layout_height="@dimen/layout_150"
            android:layout_marginRight="@dimen/layout_10"
            android:scaleType="fitXY"
            android:src="@color/color_666" />

        <EditText
            android:id="@+id/tv_goods_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_goods_pic"
            android:background="@color/color_fff"
            android:hint="请输入宝贝名称（选填）"
            android:maxLines="2"
            android:minLines="2"
            android:text=""
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_14"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tv_goods_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_goods_pic"
            android:background="@color/color_fff"
            android:hint="请输入理想价格区间"
            android:text=""
            android:textColor="@color/color_666"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/tv_goods_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_goods_pic"
            android:layout_alignParentRight="true"
            android:gravity="right|bottom"
            android:minHeight="@dimen/layout_60"
            android:minWidth="@dimen/layout_60"
            android:text="待处理"
            android:textColor="@color/color_2e6cd3"
            android:textSize="@dimen/text_16"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius0_stroke_line_bgfff"
    android:padding="@dimen/layout_10">

    <ImageView
        android:id="@+id/img_book_pic"
        android:layout_width="@dimen/layout_90"
        android:layout_height="@dimen/layout_130"
        android:layout_marginEnd="@dimen/layout_10"
        android:background="@color/color_666"
        android:paddingTop="@dimen/layout_3"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_book_pic"
        android:layout_toStartOf="@+id/tv_book_leve"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/title"
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_book_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_book_name"
        android:layout_marginTop="@dimen/layout_10"
        android:layout_toEndOf="@+id/img_book_pic"
        android:text="@string/title"
        android:textColor="@color/color_666"
        android:textSize="@dimen/text_12" />

    <TextView
        android:id="@+id/tv_book_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_book_author"
        android:layout_marginTop="@dimen/layout_10"
        android:layout_toEndOf="@+id/img_book_pic"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/layout_3"
        android:maxLines="2"
        android:text="@string/circle_content"
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_12" />

    <TextView
        android:id="@+id/tv_book_leve"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/layout_10"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/layout_3"
        android:text="9.8"
        android:textColor="@color/color_ff9441"
        android:textSize="@dimen/text_16"
        android:textStyle="italic|bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_30"
        android:layout_alignBottom="@+id/img_book_pic"
        android:layout_toEndOf="@+id/img_book_pic"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格："
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_book_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="￥9.8"
            android:textColor="@color/color_ff2a27"
            android:textSize="@dimen/text_16"
            android:textStyle="italic|bold" />

        <ImageView
            android:id="@+id/img_book_cart"
            android:layout_width="@dimen/layout_30"
            android:layout_height="@dimen/layout_30"
            android:padding="@dimen/layout_3"
            android:src="@mipmap/navi_cart_gray" />

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_5"
    android:background="@color/color_fff">

    <ImageView
        android:id="@+id/img_topic_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_fff"
        android:gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="13:20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_gradient_000"
        android:ellipsize="end"
        android:gravity="center|bottom"
        android:maxLines="2"
        android:paddingBottom="@dimen/layout_10"
        android:paddingLeft="@dimen/layout_10"
        android:paddingRight="@dimen/layout_10"
        android:text="# 自然界的美丽纹理"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/text_12"
        app:layout_constraintDimensionRatio="13:20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

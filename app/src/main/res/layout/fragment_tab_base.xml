<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layout_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tab_left_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.old.time.views.SlidingTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@color/color_fff"
            android:padding="@dimen/line_height"
            app:tl_indicator_color="#58AD2C"
            app:tl_indicator_corner_radius="@dimen/layout_5"
            app:tl_indicator_height="4dp"
            app:tl_indicator_margin_bottom="5sp"
            app:tl_indicator_width="@dimen/layout_20"
            app:tl_tab_space_equal="false"
            app:tl_textSelectColor="#323232"
            app:tl_textUnselectColor="#FF969696"
            app:tl_textsize="15sp"
            app:tl_underline_color="#fff"
            app:tl_underline_height="4dp" />

        <LinearLayout
            android:id="@+id/tab_right_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_bg" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

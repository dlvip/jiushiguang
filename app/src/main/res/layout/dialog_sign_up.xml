<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="报名信息"
        android:textColor="#FF666666"
        android:textSize="12sp" />

    <View
        android:id="@+id/view_line_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_bg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_30"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/layout_10"
        android:paddingRight="@dimen/layout_10"
        android:text="姓名"
        android:textColor="@color/color_666"
        android:textSize="@dimen/text_14" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_44"
        android:layout_marginLeft="@dimen/layout_10"
        android:layout_marginRight="@dimen/layout_10"
        android:background="@drawable/shape_radius0_stroke_line_bg666"
        android:hint=""
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_30"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/layout_10"
        android:paddingRight="@dimen/layout_10"
        android:text="电话"
        android:textColor="@color/color_666"
        android:textSize="@dimen/text_14" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_44"
        android:layout_marginLeft="@dimen/layout_10"
        android:layout_marginRight="@dimen/layout_10"
        android:background="@drawable/shape_radius0_stroke_line_bg666"
        android:hint=""
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_30"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/layout_10"
        android:paddingRight="@dimen/layout_10"
        android:text="验证码"
        android:textColor="@color/color_666"
        android:textSize="@dimen/text_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_44"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_10"
        android:paddingRight="@dimen/layout_10">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_44"
            android:layout_marginRight="@dimen/layout_10"
            android:layout_weight="1"
            android:background="@drawable/shape_radius0_stroke_line_bg666"
            android:hint=""
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_14" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_edt_bottom_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/layout_10"
            android:paddingRight="@dimen/layout_10"
            android:text="获取验证码"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/text_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_44"
        android:layout_marginTop="@dimen/layout_30"
        android:background="@drawable/shape_radius0_stroke_line_bgfff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="@dimen/layout_80"
            android:layout_height="match_parent"
            android:background="@drawable/shape_edt_bottom_bg"
            android:gravity="center"
            android:text="报名"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/layout_5">

    <ImageView
        android:id="@+id/img_topic_pic"
        android:layout_width="@dimen/layout_20"
        android:layout_height="@dimen/layout_20"
        android:layout_marginRight="@dimen/layout_10"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_20"
        android:gravity="center_vertical"
        android:text="@string/title"
        android:textColor="@color/color_2e6cd3"
        android:textSize="@dimen/text_10" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_aaa"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_mall_pic"
        android:layout_width="@dimen/layout_60"
        android:layout_height="@dimen/layout_90"
        android:layout_marginRight="@dimen/layout_15"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_default" />

    <TextView
        android:id="@+id/tv_mall_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/text_16"
        android:textStyle="bold" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fff"
    android:padding="@dimen/layout_10">

    <TextView
        android:id="@+id/tv_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/img_article_pic"
        android:lineSpacingExtra="@dimen/layout_3"
        android:maxLines="2"
        android:text="孩子从磨蹭到自觉，这位妈妈制作了一件事儿。"
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_14" />

    <ImageView
        android:id="@+id/img_article_pic"
        android:layout_width="@dimen/layout_100"
        android:layout_height="@dimen/layout_70"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/layout_10"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_default" />

    <TextView
        android:id="@+id/tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_article_pic"
        android:text="中国教育报"
        android:textColor="@color/color_666"
        android:textSize="@dimen/text_12" />


    <TextView
        android:id="@+id/tv_look_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_article_pic"
        android:layout_marginLeft="@dimen/layout_120"
        android:gravity="center"
        android:text="1139阅读"
        android:textColor="@color/color_666"
        android:textSize="@dimen/text_12" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/header_main" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_30"
        android:layout_marginLeft="@dimen/layout_25"
        android:layout_marginRight="@dimen/layout_25"
        android:layout_marginTop="@dimen/layout_60"
        android:background="@color/color_fff"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_radius10_bgfff_strok_efefef">

            <ImageView
                android:id="@+id/img_video_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_200"
                android:scaleType="centerCrop"
                android:src="@color/pic_lib_color_666" />

            <TextView
                android:id="@+id/tv_video_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_video_pic"
                android:layout_marginBottom="@dimen/layout_30"
                android:background="@color/color_fff"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/layout_15"
                android:paddingRight="@dimen/layout_15"
                android:paddingTop="@dimen/layout_40"
                android:text="权力的游戏第八季"
                android:textColor="@color/color_3691ff"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_share_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_60"
                android:layout_below="@+id/tv_video_name"
                android:layout_marginBottom="@dimen/layout_30"
                android:layout_marginLeft="@dimen/layout_15"
                android:layout_marginRight="@dimen/layout_15"
                android:layout_marginTop="@dimen/layout_30"
                android:layout_toLeftOf="@+id/img_uwdc"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/layout_5"
                android:text="【觅邮】邀你一起来看'权力的游戏第八季'"
                android:textSize="@dimen/text_16" />

            <ImageView
                android:id="@+id/img_uwdc"
                android:layout_width="@dimen/layout_60"
                android:layout_height="@dimen/layout_60"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_video_name"
                android:layout_marginBottom="@dimen/layout_30"
                android:layout_marginRight="@dimen/layout_15"
                android:layout_marginTop="@dimen/layout_30"
                android:src="@mipmap/uwdc" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

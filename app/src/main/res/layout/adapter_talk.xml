<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_5"
    android:layout_marginRight="@dimen/layout_5"
    android:background="@color/color_fff"
    android:padding="@dimen/layout_5"
    app:cardCornerRadius="@dimen/layout_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fff"
        android:padding="@dimen/layout_10">

        <TextView
            android:id="@+id/tv_talk_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/layout_3"
            android:maxLines="2"
            android:minLines="2"
            android:text="@string/title_talk"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_25" />

        <TextView
            android:id="@+id/tv_talk_index"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_talk_title"
            android:layout_marginTop="@dimen/layout_10"
            android:gravity="center_vertical"
            android:text="第五期话题"
            android:textColor="@color/color_484848"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_join_count"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_talk_title"
            android:layout_marginLeft="@dimen/layout_15"
            android:layout_marginTop="@dimen/layout_10"
            android:layout_toRightOf="@+id/tv_talk_index"
            android:gravity="center_vertical"
            android:text="12789人参与"
            android:textColor="@color/color_666"
            android:textSize="@dimen/text_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_30"
            android:layout_below="@+id/tv_join_count"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="12789人打击"
                android:textColor="@color/color_cb5278"
                android:textSize="@dimen/text_13" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="12789人激励"
                android:textColor="@color/color_666"
                android:textSize="@dimen/text_13" />


        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>

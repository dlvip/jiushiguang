<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_44"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bt_cancel"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/text_main"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="对话框标题"
                android:textColor="@color/color_000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bt_ok"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/holo_orange_light"
                android:textSize="@dimen/text_16" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/layout_30"
            android:layout_marginRight="@dimen/layout_30"
            android:orientation="horizontal">

            <com.old.time.views.WheelView
                android:id="@+id/wv_provinces"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:itemNumber="3"
                app:lineColor="@color/line_bg"
                app:maskHight="32dp"
                app:noEmpty="true"
                app:normalTextColor="#777"
                app:normalTextSize="14sp"
                app:selectedTextColor="#ff000000"
                app:selectedTextSize="18sp"
                app:unitHight="50dp" />


            <com.old.time.views.WheelView
                android:id="@+id/wv_citys"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:itemNumber="3"
                app:lineColor="@color/line_bg"
                app:maskHight="32dp"
                app:noEmpty="true"
                app:normalTextColor="#777"
                app:normalTextSize="14sp"
                app:selectedTextColor="#ff000000"
                app:selectedTextSize="18sp"
                app:unitHight="50dp" />


            <com.old.time.views.WheelView
                android:id="@+id/wv_districts"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:itemNumber="3"
                app:lineColor="@color/line_bg"
                app:maskHight="32dp"
                app:noEmpty="true"
                app:normalTextColor="#777"
                app:normalTextSize="14sp"
                app:selectedTextColor="#ff000000"
                app:selectedTextSize="18sp"
                app:unitHight="50dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

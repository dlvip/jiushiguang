<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/color_fff"
    android:paddingLeft="@dimen/layout_10"
    android:paddingRight="@dimen/layout_10">

    <ImageView
        android:id="@+id/img_book_pic"
        android:layout_width="@dimen/layout_70"
        android:layout_height="@dimen/layout_70"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/layout_10"
        android:scaleType="centerCrop"
        android:src="@color/pic_lib_color_666" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_5"
        android:layout_toEndOf="@+id/img_book_pic"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/title"
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_book_price"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_40"
        android:layout_alignBottom="@+id/img_book_pic"
        android:layout_marginEnd="@dimen/layout_10"
        android:layout_marginStart="@dimen/layout_10"
        android:layout_toEndOf="@+id/img_book_pic"
        android:gravity="center_vertical"
        android:text="价格：￥12.80"
        android:textColor="@color/color_ff4444"
        android:textSize="@dimen/text_14" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_book_pic"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_count_reduce"
            android:layout_width="@dimen/layout_40"
            android:layout_height="@dimen/layout_40"
            android:padding="@dimen/layout_5"
            android:src="@mipmap/message_delgroupuser" />

        <TextView
            android:id="@+id/tv_book_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="@dimen/layout_30"
            android:text="1"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/img_count_plus"
            android:layout_width="@dimen/layout_40"
            android:layout_height="@dimen/layout_40"
            android:padding="@dimen/layout_5"
            android:src="@mipmap/message_addgroupuser" />

    </LinearLayout>


</RelativeLayout>

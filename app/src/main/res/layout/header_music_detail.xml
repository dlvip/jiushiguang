<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_90"
        android:background="@drawable/shape_top_radius_20_bg_fff_stroke3c4"
        android:minHeight="@dimen/layout_80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_100"
            android:padding="@dimen/layout_10"
            android:text="教育培训"
            android:textColor="@color/color_666"
            android:textSize="@dimen/text_10" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_music_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_100"
        android:layout_marginRight="@dimen/layout_10"
        android:layout_marginTop="@dimen/layout_60"
        android:maxLines="1"
        android:padding="@dimen/layout_9"
        android:text="教育培训"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/text_12" />

    <ImageView
        android:id="@+id/img_music_pic"
        android:layout_width="@dimen/layout_80"
        android:layout_height="@dimen/layout_80"
        android:layout_marginLeft="@dimen/layout_20"
        android:layout_marginTop="@dimen/layout_60"
        android:src="@color/color_666" />

</RelativeLayout>

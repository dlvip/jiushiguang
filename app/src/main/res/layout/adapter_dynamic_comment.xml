<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fff"
    android:orientation="vertical"
    android:padding="@dimen/layout_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_user_header"
            android:layout_width="@dimen/layout_30"
            android:layout_height="@dimen/layout_30"
            android:src="@mipmap/head_circle" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09/16 12:35"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_12" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_10"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="@dimen/layout_10"
        android:lineSpacingExtra="@dimen/layout_3"
        android:text=""
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_14" />

</LinearLayout>

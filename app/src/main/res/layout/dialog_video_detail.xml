<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_layout_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fff">


        <RelativeLayout
            android:id="@+id/relative_layout_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_44"
            android:background="@color/color_fff"
            android:paddingLeft="@dimen/layout_10"
            android:paddingRight="@dimen/layout_10">

            <TextView
                android:id="@+id/tv_video_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="简介"
                android:textColor="@color/color_000"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/layout_40"
                android:layout_height="@dimen/layout_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/layout_10"
                android:src="@mipmap/public_arrow_down" />

        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_below="@+id/relative_layout_img"
            android:background="@color/line_bg" />

        <TextView
            android:id="@+id/tv_video_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_line"
            android:layout_marginTop="@dimen/layout_10"
            android:lineSpacingExtra="@dimen/layout_5"
            android:paddingLeft="@dimen/layout_10"
            android:paddingRight="@dimen/layout_10"
            android:text="@string/title_detail"
            android:textColor="@color/color_666"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>
</RelativeLayout>

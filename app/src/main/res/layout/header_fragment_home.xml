<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fff"
    android:orientation="vertical">

    <com.old.time.views.banner.BannerLayout
        android:id="@+id/recycler_banner"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:indicatorGravity="center"
        app:indicatorMarginBottom="@dimen/layout_10"
        app:showIndicator="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/layout_15"
        android:paddingTop="@dimen/layout_15" />

    <LinearLayout
        android:id="@+id/linear_layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</LinearLayout>

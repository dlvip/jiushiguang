<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fff"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <View
            android:layout_width="@dimen/layout_60"
            android:layout_height="@dimen/line_height"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_text_detail"
            android:background="@color/line_bg" />

        <TextView
            android:id="@+id/tv_text_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/layout_15"
            android:layout_marginRight="@dimen/layout_15"
            android:text="觅邮"
            android:textColor="@color/color_666"
            android:textSize="@dimen/text_14" />

        <View
            android:layout_width="@dimen/layout_60"
            android:layout_height="@dimen/line_height"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_text_detail"
            android:background="@color/line_bg" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_code_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="@dimen/layout_40"
            android:layout_height="@dimen/layout_40"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/layout_20"
        android:text="打开觅邮【扫一扫】"
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_18"
        android:textStyle="normal" />

</LinearLayout>

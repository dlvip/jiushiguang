<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fff"
    android:orientation="vertical">

    <include layout="@layout/header_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_25"
        android:paddingRight="@dimen/layout_25"
        android:paddingTop="@dimen/layout_50">

        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PhoneNum"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@color/color_000"
                android:textSize="@dimen/text_14" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="@dimen/layout_20"
                android:layout_marginTop="8dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/input_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="phoneCode"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/text_14" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="@dimen/layout_70"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_radius10_bgfff_strok_efefef"
                android:gravity="center"
                android:text="验证码"
                android:textColor="@color/color_000"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/input_pass_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PassWord"
                android:inputType="textPassword"
                android:maxLength="18"
                android:maxLines="1"
                android:textColor="@color/color_000"
                android:textSize="@dimen/text_14" />
        </android.support.design.widget.TextInputLayout>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:text="提交" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pass_word"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginRight="@dimen/layout_10"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="忘记密码"
                android:textColor="@color/color_000"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/tv_user_login"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginRight="@dimen/layout_10"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="登录"
                android:textColor="@color/color_000"
                android:textSize="@dimen/text_16" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/layout_15"
            android:paddingRight="@dimen/layout_15"
            android:text="取消"
            android:textColor="#FF666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="对话框标题"
            android:textColor="#FF4A4A4A"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/layout_15"
            android:paddingRight="@dimen/layout_15"
            android:text="确定"
            android:textColor="#FF58AD2C"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_bg" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.old.time.views.WheelView
            android:id="@+id/wv_first"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:itemNumber="5"
            app:lineColor="@color/transparent"
            app:maskHight="32dp"
            app:noEmpty="true"
            app:normalTextColor="#FF666666"
            app:normalTextSize="13sp"
            app:selectedTextColor="#FF666666"
            app:selectedTextSize="18sp"
            app:unitHight="30dp" />

        <com.old.time.views.WheelView
            android:id="@+id/wv_second"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:itemNumber="5"
            app:lineColor="@color/transparent"
            app:maskHight="32dp"
            app:noEmpty="true"
            app:normalTextColor="#FF666666"
            app:normalTextSize="13sp"
            app:selectedTextColor="#FF666666"
            app:selectedTextSize="18sp"
            app:unitHight="30dp" />


        <com.old.time.views.WheelView
            android:id="@+id/wv_third"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:itemNumber="5"
            app:lineColor="@color/transparent"
            app:maskHight="32dp"
            app:noEmpty="true"
            app:normalTextColor="#FF666666"
            app:normalTextSize="13sp"
            app:selectedTextColor="#FF666666"
            app:selectedTextSize="18sp"
            app:unitHight="30dp" />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.old.time">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <!-- 连接网络权限，用于执行云端语音能力 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取手机录音机使用权限，听写、识别、语义理解需要用到此权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 读取网络信息状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取当前wifi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- 读取手机信息权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 读取联系人权限，上传联系人需要用到此权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 配置权限，用来记录应用配置信息 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- 手机定位信息，用来为语义等功能提供定位，提供更精准的服务 -->
    <!-- 定位信息是敏感信息，可通过Setting.setLocationEnable(false)关闭定位请求 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- 用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 用于写入缓存数据到扩展存储卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 用于申请调用A-GPS模块 -->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <!-- 用于申请获取蓝牙信息进行室内定位 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name=".downloads.DownLoadService" />

        <!-- 定位配置开始 -->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="9c9c4d9a65971e91f0130fa087d263aa" />

        <service android:name="com.amap.api.location.APSService" />
        <!-- 定位配置结束 -->

        <activity android:name=".activitys.SplishActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.UserLoginActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activitys.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity android:name=".activitys.PhotoPagerActivity" />
        <activity android:name=".activitys.CameraTakeActivity" />
        <activity android:name=".activitys.PhotoPickActivity" />
        <activity android:name=".activitys.ClipImageActivity" />
        <activity android:name=".activitys.PhotoAlbumActivity" />
        <activity android:name=".activitys.PhotoPreviewActivity" />
        <activity android:name=".activitys.PuzzleActivity" />
        <activity android:name=".activitys.PuzzleMActivity" />
        <activity android:name=".activitys.SettingActivity" />
        <activity android:name=".activitys.DynamicActivity" />
        <activity android:name=".activitys.PicsManageActivity" />
        <activity android:name=".activitys.UserMesgActivity" />
        <activity android:name=".activitys.UserDressActivity" />
        <activity android:name=".activitys.CreateDressActivity" />
        <activity android:name=".activitys.WebViewActivity" />
        <activity
            android:name=".activitys.UserRegisterActivity"
            android:launchMode="singleTask" />
        <activity android:name=".activitys.SystemMsgActivity" />
        <activity android:name=".activitys.UserOrderActivity" />
        <activity android:name=".activitys.SendDynamiceActivity" />
        <activity
            android:name=".activitys.LocationMapActivity"
            android:imeOptions="actionSearch" />
        <activity android:name=".activitys.DynamicDetailActivity" />
        <activity android:name=".activitys.DownLoadActivity"></activity>
    </application>

</manifest>